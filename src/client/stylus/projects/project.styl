.tm-project-header
  background #4470af
  color #fff
  border .5px inset #999

.tm-project-add-task
  background #eee

.tm-project-name
  font-size 2rem
  margin 1rem

i.fa
  vertical-align baseline


.tm-project-buttons
  font-size 2rem
  vertical-align middle
  visibility hidden

.tm-project-header:hover .tm-project-buttons
  visibility visible

.tm-project-buttons i.fa
.tm-project-buttons span
  color #fff
  font-size 2rem
  margin-right 1rem

.tm-project-buttons span
.tm-task-buttons span
  opacity .3

.tm-task-row
  // background #99b

.tm-task-row:hover
  background #fcfed5

.tm-task-done
  width 3rem

.tm-task-warning
  min-width 5rem

.tm-task-caption
  min-width 45rem
  // min-width 40rem

.tm-task-caption p
  font-size 1.5rem
  margin-top .375rem
  margin-right 2rem

.tm-task-buttons
  font-size 2rem
  min-width 12rem
  margin 0 1rem 0 2rem
  visibility hidden

.tm-task-row:hover .tm-task-buttons
  visibility visible

.tm-task-buttons i.fa
.tm-task-buttons span
  color #aaa
  margin-right .5rem

.tm-task-bell
  margin 0 2rem 0 0
  color red

.tm-task-bell-pendulum
  -webkit-animation pendulum .5s infinite linear
  -moz-animation pendulum .5s infinite linear
  -o-animation pendulum .5s infinite linear
  animation pendulum .5s infinite linear

@keyframes pendulum
  0%
    transform:rotate(0deg)
    transform-origin 50% 0
  25%
    transform:rotate(45deg)
    transform-origin 50% 0
  50%
    transform:rotate(0deg)
    transform-origin 50% 0
  75%
    transform:rotate(-45deg)
    transform-origin 50% 0
  100%
    transform:rotate(0deg)
    transform-origin 50% 0


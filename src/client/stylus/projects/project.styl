  font-size 3rem

.tm-project-add-task .fa
  font-size 3rem

.tm-project-header span.tm-project-name
  margin-top 5rem
  padding-top 5rem

.tm-project-header .input-group-btn .btn
.tm-project-add-task .input-group-btn .btn
  min-width 11.5rem
  background #70a789

.tm-glyphicon-shadow-light-bottom

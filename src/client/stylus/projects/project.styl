.tm-project-header .input-group-btn .btn:hover
.tm-project-add-task .input-group-btn .btn:hover
  background #5f9678

.tm-add-task-button:hover
  color #5f9678

.tm-project-header .input-group-btn .btn:active
.tm-project-add-task .input-group-btn .btn:active
  background #4d8567

.tm-add-task-button:active

.row.tm-project-header
  .col-xs-1
    i.fa.fa-calendar-o.fa-3x.tm-glyphicon-shadow-light-bottom
  .col-xs-11
    form
      .input-group
        input.form-control(ng-model='vm.newProject.name'
          translate-attr="{placeholder: 'projects.newProjectHint'}")
        .input-group-btn
          button.btn.btn-success(type='submit' ng-click='vm.create()').
            {{'projects.addButton' | translate}}

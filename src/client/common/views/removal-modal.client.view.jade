.modal-header
  h3(translate='common.removalModalHeader'
    translate-values='{entity: vm.entity}')
.modal-body
  p.text-center(translate='common.removalModalBody'
    translate-values='{caption: vm.caption}')
.modal-footer
  button.btn.btn-danger(ng-click='vm.ok()') {{'common.delete' | translate}}
  button.btn.btn-primary(ng-click='vm.cancel()') {{'common.cancel' | translate}}

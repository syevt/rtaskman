.row.tm-project-add-task
  .col-xs-1
    i.fa.fa-plus.tm-add-task-button.tm-glyphicon-shadow-dark-top
  .col-xs-11
    form
      .input-group
        input.form-control(ng-model='vm.parentProject.newTask.content'
          translate-attr="{placeholder: 'tasks.newTaskHint'}")
        .input-group-btn
          button.btn.btn-success(type='submit' ng-click='vm.create()').
            {{'tasks.addButton' | translate}}
